{
  "_comment": "话术配置文件 - 控制AI回复的话术模板和规则",
  
  "templates": {
    "_comment": "通用话术模板库",
    "greeting": [
      "大家好，我是小小，欢迎来到直播间！",
      "欢迎新朋友，我是小小，很高兴见到大家～",
      "大家好呀，今天又和大家见面啦～"
    ],
    "_greeting_comment": "问候语模板"
  },
  
  "reply_rules": [
    {
      "match": "上链接",
      "template": "商品链接已置顶，{username}可以点击查看哦～",
      "priority": 10
    },
    {
      "match": "多少钱|价格|多钱",
      "template": "价格信息在商品详情里哦，{username}可以点击查看～",
      "priority": 9
    },
    {
      "match": "好看|漂亮|美",
      "template": "谢谢{username}的夸奖，你的眼光真好～",
      "priority": 5
    }
  ],
  "_reply_rules_comment": "智能回复规则，match支持正则表达式，priority越高优先级越高",
  
  "gift_thanks": [
    {
      "min_price": 100,
      "template": "哇！感谢{username}送出的{giftName}x{giftCount}！太感动了！",
      "priority": 10
    },
    {
      "min_price": 10,
      "template": "感谢{username}送出的{giftName}x{giftCount}！爱你哦～",
      "priority": 8
    },
    {
      "min_price": 1,
      "template": "感谢{username}送出的{giftName}x{giftCount}！",
      "priority": 5
    }
  ],
  "_gift_thanks_comment": "礼物感谢模板，根据礼物价值使用不同的感谢话术"
}
