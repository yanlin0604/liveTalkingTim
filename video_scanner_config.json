  "logging": {
    "level": "INFO",
    "log_file": "video_scanner.log",
    "max_log_size": "10MB",
    "backup_count": 5
  },
  "notifications": {
    "enable_email": false,
    "email_settings": {
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "to_email": ""
    }
  }
